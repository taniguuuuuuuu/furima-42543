<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- ニックネーム -->
  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname %>
  </div>

  <!-- 苗字 -->
  <div class="field">
    <%= f.label :last_name, "名字" %><br />
    <%= f.text_field :last_name %>
  </div>

  <!-- 名前 -->
  <div class="field">
    <%= f.label :first_name, "名前" %><br />
    <%= f.text_field :first_name %>
  </div>

  <!-- 苗字カナ -->
  <div class="field">
    <%= f.label :last_name_kana, "名字カナ" %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <!-- 名前カナ -->
  <div class="field">
    <%= f.label :first_name_kana, "名前カナ" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <!-- 生年月日 -->
  <div class="field">
    <%= f.label :birthday, "生年月日" %><br />
    <%= f.date_select :birthday, start_year: 1930, end_year: Time.now.year, default: Date.new(2000,1,1) %>
  </div>

  <!-- メールアドレス -->
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!-- パスワード -->
  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <!-- パスワード確認 -->
  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
